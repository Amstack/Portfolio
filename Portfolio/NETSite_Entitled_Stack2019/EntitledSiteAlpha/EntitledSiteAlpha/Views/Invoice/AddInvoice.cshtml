@model EntitledSiteAlpha.Models.InvoiceModel

@{
    ViewData["Title"] = "Donation";
}

<h4>Request or donate items to the bank</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-10">
                Donate
                @Html.RadioButtonFor(model => model.InvoiceType, 1)
                Request
                @Html.RadioButtonFor(model => model.InvoiceType, 0)
            </div></br></br>
            <div class="col-md-10">
                Item name </br>
                @Html.TextBoxFor(model => model.InvoiceItemName)
            </div></br></br>
            <div class="col-md-10">
                Count </br>
                @Html.TextBoxFor(model => model.InvoiceItemCount)
            </div></br></br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
